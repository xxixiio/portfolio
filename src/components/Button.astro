---
import GithubSimplified from "../icons/github-simplified.astro";
import Web from "../icons/web.astro"

interface Props {
    content: String;
    as: String;
    color?: String;
    icon?: String;
}

const { content, as, color, icon, ...props } = Astro.props;
const Tag = as;

const iconSelector = {
    "github": GithubSimplified,
    "web": Web
}
const Icon = iconSelector[icon]

const colorSelector = {
    "white": "button-white"
}
let buttonClass = ["button__container", colorSelector[color]].join(" ")
---

<Tag class:list={buttonClass} {...props}>
    {
        Icon ? (<Icon class:list={"button__icon"}/>) : null
    }
    {content}
</Tag>

<style>
    .button__container {
        border: solid 1px #fff;
        color: #fff;
        border-radius: 8px;
        padding: 12px 30px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5px;
        transition: background .2s ease;
        transition: color .2s ease;

        &:hover {
            background-color: #fff;
            color: var(--background);
        }
    }

    .button__icon {
        width: 20px;
        height: auto;
    }
</style>