---
import { t } from "i18next";
import { Image } from "astro:assets";
import Button from "./Button.astro";
import ProjectState from "./ProjectState.astro";

interface Project {
  name: String;
  description: String;
  state: Number;
  built_with: String[];
  url: string;
  image: String;
  github: String;
}

interface Props {
  projectData: Project;
}

const { projectData } = Astro.props;
---

<a class="project__container" href={projectData.url} target="__blank">
  <div class="project__image-container">
    <Image
      class="project__image"
      src={"/img/projects/" + projectData.image}
      alt={projectData.name + " project example"}
      width={352}
      height={250}
      loading="lazy"
    />
  </div>
  <div class="project__content">
    <div class="project__info">
      <div class="project__main">
        <h3 class="project__title">{projectData.name}</h3>
        <ProjectState state={projectData.state} />
      </div>
      <p class="project__description">{projectData.description}</p>
    </div>
    <p class="project__used">
      {projectData.built_with.map((tech) => (
        <span class="project__tag">#{tech.toLowerCase()}</span>
      ))}
    </p>
    <div class="project__links">
      <p class="project__button">View Project</p>
    </div>
  </div>
</a>

<style>
  .project__container {
    width: 49%;
    border: solid 1px #494949;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    box-shadow: 0px 5px 10px 0px rgba(0,0,0,0.6);
    overflow: hidden;
    position: relative;
    transition: all .2s ease-in;
    box-shadow: 0 -5px 10px -5px #ffffff1f inset;
  }

  .project__container:hover {
    cursor: pointer;
    box-shadow: 0 -15px 30px -15px #ffffff1f inset;
  }

  .project__container:hover .project__image-container {
    transform: scale(1.05);
  }

  .project__image-container {
    position: relative;
    height: 200px;
    overflow: hidden;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .project__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .project__content {
    padding: 16px 16px;
    padding-bottom: 0;
    margin-top: 0;
    height: 50%;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .project__title {
    margin: 0;
  }

  .project__main {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 12px;
  }

  .project__description {
    margin: 3px 0;
  }

  .project__used {
    display: flex;
    flex-wrap: wrap;
    margin-top: 5px;
    gap: 10px;
  }

  .project__tag {
    color: #979797;
    border-radius: 20px;
    padding: 1px 0;
  }

  .project__button {
    transform: translateY(100%);
    opacity: 0;
    transition: transform 0.4s ease, opacity 0.4s ease;
  }

  .project__container:hover .project__button {
    transform: translateY(0);
    opacity: 1;
  }

  .project__links {
    display: flex;
    justify-content: space-around;
    margin-top: auto;
  }

  @media only screen and (max-width: 768px) {
    .project__container {
      width: 100%;
      height: fit-content;
    }

    .project__image-container {
      height: 150px;
    }
  }
</style>
