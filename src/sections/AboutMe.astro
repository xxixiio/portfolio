<style>
  .wave {
    animation-name: wave-animation;
    animation-duration: 2.5s;
    animation-iteration-count: 3;
    transform-origin: 70% 70%;
    display: inline-block;
  }

  @keyframes wave-animation {
    0% {
      transform: rotate(0deg);
    }
    10% {
      transform: rotate(14deg);
    }
    20% {
      transform: rotate(-8deg);
    }
    30% {
      transform: rotate(14deg);
    }
    40% {
      transform: rotate(-4deg);
    }
    50% {
      transform: rotate(10deg);
    }
    60% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }

  .hero__name-container {
    display: flex;
    height: 200px;
    align-items: center;
    gap: 35px;
    margin-bottom: -25px;
  }

  .hero__avatar {
    border-radius: 100%;
    height: 60%;
    width: auto;
  }

  .hero__name {
    margin-bottom: -3px;
  }

  .hero__username {
    display: flex;
    align-items: center;
    justify-items: center;
    gap: 8px;
    margin-top: 3px;
    color: var(--gray);
  }

  .hero__link {
    display: flex;
    align-items: center;
    justify-items: center;
    gap: 8px;
    margin-top: 3px;
    color: #fff;

    &:hover {
      text-decoration: underline
    }
  }

  .hero__link_icon {
    line-height: 1;
  }

  .hero__links {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-top: 50px;
    flex-wrap: wrap;
  }

  .hero__hey {
    font-size: 28px;
    margin-bottom: -8px;
  }

  .hero__undername {
    display: flex;
    align-items: center;
    font-size: 14px;
    color: #c5e0ae;
    gap: 12px;
    text-wrap: nowrap;
  }

  .pulse_dot {
    height: 8px;
    width: 8px;
    display:block;
    border-radius:50%;
    background-color:#62bd19;
    animation:pulse 1500ms infinite;
  }

  @keyframes pulse {
    0%{
      box-shadow:#62bd19 0 0 0 0;
    }
    75%{
      box-shadow:#ff69b400 0 0 0 6px;
    }
  }

  @media only screen and (max-width: 768px) {
  .hero__links {
    gap: 10px;
  }
  }
</style>