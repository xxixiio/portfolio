<header class="header__container" id="header">
  <p>
    <a href="/" class="header__title">seb</a>
  </p>
  <ul class="header__list">
    <li><a href="#" title="About me">About me</a></li>
    <li><a href="#experience" title="Experience">Experience</a></li>
    <li><a href="#projects" title="Projects">Projects</a></li>
    <li><a href="#contact" title="Contact">Contact</a></li>
  </ul>
</header>

<style>
  .header__container {
    width: calc(100% - 32px);
    display: flex;
    justify-content: space-between;
    background-color: #574f753a;
    padding: 12px 16px;
    border-radius: 20px;
    margin-top: 15px;
    overflow: auto;
    backdrop-filter: blur(50px);
    -webkit-backdrop-filter: blur(50px);
    position: sticky;
    top: 15px;
    z-index: 1000;
    white-space: nowrap;
    transition: transform .5s ease;
    transform: translateY(0);

    > * {
      margin: 0;
    }
  }

  .header__hide {
    transform: translateY(-100px);
  }

  .header__list {
    display: flex;
    gap: 15px;
  }

  .header__title,
  .header__list > li > a {
    color: #fff;
    transition: all 0.2s ease-in-out;
  }

  .header__list > li > a:hover {
    text-decoration: underline;
  }

  @media only screen and (max-width: 400px) {
    .header__title,
    .header__list > li > a {
      font-size: 12px;
    }
  }
</style>

<script>
  const $header = document.getElementById("header");
  let prevY = 0;

  window.onscroll = (e) => {
    if (window.scrollY > prevY) {
      $header.classList.add("header__hide");
    } else if (window.scrollY < prevY || window.scrollY < 0) {
      $header.classList.remove("header__hide");
    }

    if (!(window.scrollY < 0)) {
      prevY = window.scrollY;
    }
  };
</script>
