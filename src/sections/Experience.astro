---
import experience from "../consts/experience.js";
---

<section>
  <h2 id="experience">Experience</h2>
  <div class="timeline__container">
    <ul class="timeline__list">
      {
        experience.map((e, i) => (
          <li class="timeline__element">
            <div class="timeline__main">
              <div class="timeline__title">
                <h3 class="timeline__name accent">{e.name}</h3>
                <div>
                  <span class="timeline__as">as</span>
                  <p class="timeline__position">{e.position}</p>
                </div>
              </div>
              <p class="timeline__date">
                {e.startDate + (e.endDate ? " - " + e.endDate : "")}
              </p>
            </div>
            <p>{e.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  .timeline__list {
    border: 0 solid #fff;
    border-left-width: 2px;
    padding-left: 40px
  }

  .timeline__element {
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding: 18px 12px;
    border-radius: 8px;
    transition: background 0.1s ease-in-out;

    &:hover {
      background-color: var(--hover-gray);
    }

    > p {
      margin: 0;
    }
  }

  .timeline__element::before {
    content: "";
    position: absolute;
    width: 15px;
    height: 15px;
    background-color: #fff;
    border-radius: 50%;
    margin-left: -60px;
    margin-top: 10px;
  }

  .timeline__main {
    display: flex;
    justify-content: space-between;
  }

  .timeline__title {
    display: flex;
    align-items: baseline;
    gap: 8px;
    white-space: nowrap;
  }

  .timeline__as {
    font-size: 12px;
    color: #adadad;
    margin-right: 3px;
  }

  .timeline__name {
    font-size: 24px;
    margin: 0;
  }

  .timeline__as,
  .timeline__position {
    display: inline;
  }

  .timeline__date {
    color: #e6e6e6;
    width: fit-content;
    font-size: 15px;
    border-radius: 9px;
    margin: 0;
    align-self: center;
  }

  .timeline__position {
    margin: 0;
  }

  @media only screen and (max-width: 768px) {
    .timeline__title {
      flex-direction: column;
      align-items: flex-start;
    }

    .timeline__date {
      align-self: flex-start;
      margin-top: 6px;
    }
  }

  @media only screen and (max-width: 400px) {
    .timeline__main {
      display: flex;
      flex-direction: column;
      gap: 13px;
    }

    .timeline__date {
      margin: 0;
    }
  }
</style>
