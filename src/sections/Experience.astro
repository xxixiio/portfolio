---
import experience from "../consts/experience.js";
---

<section>
  <h2 id="experience">Experience</h2>
  <div class="timeline__container">
    <ul class="timeline__list">
      {
        experience.map((e, i) => (
          <li class="timeline__element">
            <h3 class="timeline__name accent">{e.name}</h3>
            <p class="timeline__position">{e.position}</p>
            <p class="timeline__date">{e.startDate + (e.endDate ? " - " + e.endDate : "")}</p>
            <p>{e.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  .timeline__list {
    border: 0 solid #fff;
    border-left-width: 2px;
  }

  .timeline__element {
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding: 8px 12px;
    border-radius: 8px;
    transition: background .1s ease-in-out;

    &:hover {
      background-color: var(--hover-gray);
    }

    > p {
      margin: 0;
    }
  }

  .timeline__element::before {
    content: "";
    position: absolute;
    width: 15px;
    height: 15px;
    background-color: #fff;
    border-radius: 50%;
    margin-left: -60px;
    margin-top: 24px;
  }

  .timeline__name {
    font-size: 24px;
    margin: 0;
  }

  .timeline__position {
    background-color: #76ff7d;
    color: var(--background);
    width: fit-content;
    padding: 2px 12px;
    font-size: 15px;
    border-radius: 9px;
  }
</style>
